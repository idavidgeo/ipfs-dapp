generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  address   String     @id @unique
  name      String?
  nonce     String
  bio       String?
  verified  Boolean // User is unverifed if user never signs in
  ipfsFiles IpfsFile[] // One-to-many
}

model IpfsFile {
  hash        String  @id @unique
  name        String
  user        User?   @relation(fields: [userAddress], references: [address]) // Many-to-one
  userAddress String?
}
